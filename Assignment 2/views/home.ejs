<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Blog Home</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Blog Posts</h1>
        <a href="/add-post" class="add-button">Add New Post</a>
        <div class="posts">
            <% posts.forEach(post => { %>
                <div class="post-card">
                    <h2><a href="/post?id=<%= post.id %>"><%= post.title %></a></h2>
                    <p class="date"><%= new Date(post.date).toLocaleDateString() %></p>
                    <p><%= post.content.substring(0, 100) %>...</p>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>